---
import MainLayout from "@/layouts/MainLayout.astro";
import type {PokemonListResponse} from "@/interfaces/pokemon-list-response.interface.ts";
import PokemoCard from "@/components/PokemoCard.astro";
import type {GetStaticPaths} from "astro";


export const getStaticPaths = (async ({paginate}) => {
    const resp = await fetch("https://pokeapi.co/api/v2/pokemon?limit=151");
    const {results} = await resp.json() as PokemonListResponse;
    return paginate(results, {pageSize: 20})
}) satisfies GetStaticPaths
const title = 'Pokemon Static | Home';
const {page} = Astro.props;
---
<MainLayout title={title}>
    <h1 class="text-3xl text-blue-500">Listado de pokemones</h1>
    <hr/>
    <section
            aria-label="Listado de pokemon"
            class="grid grid-cols-1 sm:grid-cols-3 md:grid-cols-3 gap-4 py-2 w-full"
    >
        {page.data.map(pokemon => (
                <PokemoCard url={pokemon.url} name={pokemon.name}/>))}
    </section>
    <section class="flex px-10 mt-10 gap-2 items-center">
        <a href={page.url.prev}
        class:list={
            ["btn btn-primary",{disabled: !page.url.prev}]
        }
        >Anterior</a>
        <span>{page.currentPage}/{page.total}</span>
        <a href={page.url.next} class="btn btn-primary">Siguiente</a>
    </section>
</MainLayout>

<style>
    @reference "tailwindcss";
    .disabled {
        @apply bg-gray-600 text-gray-400
    }
</style>